<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <stroke
        android:width="2dp"
        android:color="@color/white" />

    <!-- 배경색 채우기 -->
    <solid android:color="#2C7878E1" /> <!-- 원하는 불투명한 색상으로 변경 -->

    <size
        android:width="36dp"
        android:height="20dp" />

    <!-- 텍스트 주변에 여백 추가 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <corners android:radius="10dp" />
</shape>
